<% layout('layouts/boilerplate')%>
<h1 class="text-center">Edit Cool Place</h1>

<div class="row">
  <div class="col-md-6 offset-md-3">
    <form action="/coolplaces/<%=coolplace._id%>?_method=PUT" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input class="form-control" type="text" id="title" name="coolplace[title]" value="<%=coolplace.title %>" required />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input class="form-control" type="text" id="location" name="coolplace[location]" value="<%=coolplace.location %>" required />
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="price">Campground Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="text"
            class="form-control"
            id="price"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price-label"
            name="coolplace[price]"
            value="<%=coolplace.price %>"
            required
          />
          <div class="valid-feedback">Looks good!</div>
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea class="form-control" type="text" id="description" name="coolplace[description]" required><%= coolplace.description%></textarea>
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <div class="custom-file">
          <input type="file" class="custom-file-input" name="image" id="image" multiple />
          <label class="custom-file-label" for="image">Upload more images</label>
        </div>
      </div>

      <div class="mb-3">
        <% coolplace.images.forEach(function(img, i) { %>
        <img src="<%= img.thumbnail %>" alt="" class="img-thumbnail" />
        <div class="form-check-inline">
          <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%= img.filename %>" />
        </div>
        <label for="image-<%=i%>">Delete?</label>
        <% }) %>
      </div>

      <div class="mb-3">
        <button class="btn btn-info">Update Cool Place</button>
      </div>
    </form>
    <a href="/coolplaces/<%= coolplace._id%>">Back To Cool Place</a>
  </div>
</div>
