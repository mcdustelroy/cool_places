<% layout('layouts/boilerplate')%>

<div id="cluster-map"></div>

<h1>Cool Places</h1>
<a href="/coolplaces/new">Make a new Cool Place</a>

<% for (let place of coolplaces) { %>

<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <% if (place.images.length) { %>
      <img class="img-fluid" alt="" src="<%=place.images[0].url%>" />
      <% } else { %>
      <img class="img-fluid" src="https://res.cloudinary.com/dmukgc5uu/image/upload/v1632988789/mapApp/zrsdreafgdfyalmu9iiz.png" alt="" />
      <% } %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= place.title %></h5>
        <p class="card-text">
          <small class="text-muted"><%= place.location%></small>
        </p>
        <a class="btn btn-primary" href="/coolplaces/<%= place._id %>">View <%=place.title%></a>
        <p class="card-text"><%= place.description %></p>
      </div>
    </div>
  </div>
</div>
<% } %>

<script>
  const mapToken = "<%-process.env.MAPBOX_TOKEN%>";
  const coolplaces = {features: <%-JSON.stringify(coolplaces)%>};
</script>

<script src="/javascripts/clusterMap.js"></script>
